<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="BorrowController">
   <children>
      <TextField onInputMethodTextChanged="#updateSearch" text="搜索图书">
         <VBox.margin>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </VBox.margin>
      </TextField>
      <TabPane tabClosingPolicy="UNAVAILABLE" tabMinWidth="48.0">
        <tabs>
          <Tab text="书库">
               <content>
                  <VBox>
                     <children>
                        <AnchorPane>
                           <children>
                              <TableView fx:id="lib_tab" editable="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                 <columns>
                                    <TableColumn editable="false" maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefWidth="320.0" text="书名" />
                                    <TableColumn editable="false" maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefWidth="120.0" text="剩余数量" />
                                 </columns>
                              </TableView>
                           </children>
                        </AnchorPane>
                        <AnchorPane>
                           <VBox.margin>
                              <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                           </VBox.margin>
                           <children>
                              <Button defaultButton="true" mnemonicParsing="false" onAction="#borrow" text="借" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0">
                                 <font>
                                    <Font size="14.0" />
                                 </font></Button>
                           </children>
                        </AnchorPane>
                     </children>
                  </VBox>
               </content>
          </Tab>
          <Tab text="我的">
            <content>
                  <VBox>
                     <children>
                    <AnchorPane>
                           <children>
                              <TableView fx:id="my_tab" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                <columns>
                                  <TableColumn editable="false" maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefWidth="320.0" text="书名" />
                                  <TableColumn editable="false" maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefWidth="120.0" text="到期时间" />
                                </columns>
                              </TableView>
                           </children>
                        </AnchorPane>
                        <AnchorPane>
                           <children>
                              <Button defaultButton="true" mnemonicParsing="false" onAction="#ret" text="还" AnchorPane.rightAnchor="0.0">
                                 <font>
                                    <Font size="14.0" />
                                 </font></Button>
                           </children>
                           <VBox.margin>
                              <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                           </VBox.margin>
                        </AnchorPane>
                     </children>
                  </VBox>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</VBox>
